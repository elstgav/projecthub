{
  "manifest_version": 2,

  "name":           "ProjectHub",
  "author":         "Gavin Elster",
  "description":    "Adds useful filters to your GitHub project board",
  "version":        "0.1.1",

  "options_ui": {
    "page":         "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts":    ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://*.github.com/*/*/projects/*"],
      "css":     ["app.bundle.css"],
      "js":      ["common.bundle.js", "app.bundle.js"],
      "run_at":  "document_end"
    }
  ],

  "minimum_chrome_version": "55",

  "permissions": [
    "storage"
  ]
}
